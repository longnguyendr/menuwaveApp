{% extends 'base.html.twig' %}

{% block title %}Places{% endblock %}

{% block body %}
    <h1>Places</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ place.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ place.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ place.description }}</td>
            </tr>
            <tr>
                <th>OpenHour</th>
                <td>{{ place.openHour ? place.openHour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CloseHour</th>
                <td>{{ place.closeHour ? place.closeHour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ place.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('places_index') }}">back to list</a>

    <a href="{{ path('places_edit', {'id': place.id}) }}">edit</a>

    {{ include('places/_delete_form.html.twig') }}
{% endblock %}
