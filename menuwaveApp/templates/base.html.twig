<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="{{ asset('img/icon.png') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('build/global.css') }}" />
        <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    {# bootstrap and jquery#}
    <script src="{{ asset('build/app.js') }}"> </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    {# page custom js files#}
    {% block javascripts %}{% endblock %}
        <nav class="navbar navbar-expand-md fixed-top navbar-dark custom-nav" id="main-navbar">
            <a class="navbar-brand" href="/">
                <img alt="MenuWave" src=" {{ asset('img/logo.png') }}" style="object-fit: cover;">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars fa-2x toggle-btn"></i>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">

            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}

                    <li class="nav-item" id="search">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item" id="login">
                        <a class="nav-link" href="#">Sign in</a>
                    </li>

            {% else %}

                    <li class="nav-item" id="topnav">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item" id="projectsnav">
                        <a class="nav-link" href="/#projects">Projects</a>
                    </li>
                    <li class="nav-item" id="profilenav">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item" id="somenav">
                        <a class="nav-link" href="/#social-media">Social Media</a>
                    </li>

            {% endif %}

                </ul>
            </div>

        </nav>
        <div class="page-content">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
